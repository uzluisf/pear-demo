<!DOCTYPE html>
<html>
{{> head }}

<body>
	<div class="container wrapper">
        {{> header }}
        
        <div class="recent-posts section">
			<h2 class="section-header">Recent posts</h2>

            {{#posts}}
			    <div class="posts">
			    	<div class="post">
                        <div class="meta">{{date}}{{#draft}}<span
                                class="draft-label">DRAFT</span>{{/draft}}</div>
                        <a class="title" href="{{site.base-url}}{{url}}">{{title}}</a> &mdash;

                        {{#description}} 
			    		<span class="description">{{description}}</span>
                        {{/description}} 
                    </div>
                </div>
            {{/posts}}
        </div>
	</div>

    {{> footer }}
</body>
</html>
