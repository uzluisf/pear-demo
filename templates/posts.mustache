<!DOCTYPE html>
<html>
{{> head }}

<body>
	<div class="container wrapper list">
        {{> header }}
		<h1 class="page-title">All articles</h1>

		<ul class="posts">
            {{#posts}}
			<li class="post">
                <a href="{{site.base-url}}{{url}}">{{title}}</a>
                <span class="meta">{{date}}{{#draft}}<span class="draft-label">DRAFT</span>{{/draft}}</span>
			</li>
            {{/posts}}
		</ul>
	</div>

    {{> footer }}
</body>

</html>
