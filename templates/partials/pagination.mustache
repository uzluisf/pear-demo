<ul class="pagination">
	<li class="page-item page-prev">
    {{#page.previous}}
    <a href="{{site.base-url}}{{page.previous.url}}" class="page-link" aria-label="Previous"><span aria-hidden="true">← Prev page</span></a>
    {{/page.previous}}
	</li>

	<li class="page-item page-next">
    {{#page.next}}
    <a href="{{site.base-url}}{{page.next.url}}" class="page-link" aria-label="Next"><span aria-hidden="true">Next page →</span></a>
    {{/page.next}}
	</li>
</ul>
